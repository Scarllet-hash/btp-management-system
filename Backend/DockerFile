# Multi-stage build pour Spring Boot (Maven -> runtime)
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /workspace
# Copie pom puis source pour profiter du cache Docker
COPY pom.xml .
COPY src ./src
# Build du jar (skip tests pour accélérer; enlève -DskipTests pour exécuter tests)
RUN mvn -B -DskipTests package

# Runtime
FROM eclipse-temurin:21-jre
WORKDIR /app
# Copie du jar généré (wildcard pour couvrir le nom du jar)
COPY --from=build /workspace/target/*.jar app.jar
EXPOSE 8080
ENV JAVA_OPTS=""
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar /app/app.jar"]